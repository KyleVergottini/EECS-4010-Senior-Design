<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="12dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_details_event_name"
            android:text="Event Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_details_event_time_hint"
            android:text="Event Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_event_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_details_event_time"
            android:text="EVENT DATE/TIME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_event_name"
            android:layout_toRightOf="@id/tv_details_event_time_hint"/>

        <TextView
            android:id="@+id/tv_details_event_date_hint"
            android:text="Event Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_event_time_hint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_details_event_date"
            android:text="EVENT DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_event_time"
            android:layout_toRightOf="@id/tv_details_event_date_hint"/>

        <TextView
            android:id="@+id/tv_details_event_room_hint"
            android:text="Event Room: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_event_date_hint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_details_event_room"
            android:text="EVENT LOCATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_event_date_hint"
            android:layout_toRightOf="@id/tv_details_event_room_hint"/>


        <TextView
            android:id="@+id/tv_details_description_hint"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="35sp"
            android:layout_below="@id/tv_details_event_room"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_details_description"
            android:text="Details here. They may be long and multiline so here is a long example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_details_description_hint"/>
    </RelativeLayout>

