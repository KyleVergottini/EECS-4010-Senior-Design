<?xml version="1.0" encoding="utf-8"?>

<!--Contains the Expanded Event Card View for the Schedule screen-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Now.card_expand_inner_layout.dark.bold"
        android:id="@+id/schedule_card_expand_title"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/schedule_card_expand_details_text"
        style="@style/Now.card_expand_inner_layout.dark"
        android:text="Event details listed here if they are provided by the admin when the convention set up. About the event. Like details, you know?"
        android:layout_height="wrap_content"/>

</LinearLayout>