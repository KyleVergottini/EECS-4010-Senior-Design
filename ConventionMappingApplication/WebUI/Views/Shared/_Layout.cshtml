<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render(Links.Content.DataTables.css.dataTables_bootstrap4_min_css)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="topNav navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Map-A-Con", MVC.Home.Index(), new { @class = "navbar-brand homeNav" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", MVC.Home.Index())</li>*@
                    <li>@Html.ActionLink("Edit Conventions", MVC.Convention.ConList())</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render(Links.Scripts.DataTables.jquery_dataTables_min_js)
    @Scripts.Render(Links.Scripts.DataTables.dataTables_bootstrap4_min_js)
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').datepicker();
        });
        jQuery.validator.addMethod("greaterThan",
        function (value, element, params) {

            if (!/Invalid|NaN/.test(new Date(value))) {
                return new Date(value) > new Date($(params).val());
            }

            return isNaN(value) && isNaN($(params).val())
                || (Number(value) > Number($(params).val()));
        }, 'Must be greater than Start Date.');
    </script>
</body>
</html>