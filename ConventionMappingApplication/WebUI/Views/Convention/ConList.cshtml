@{
    ViewBag.Title = "Select a Convention to Edit";
}
<h2>@ViewBag.Title</h2>
<table id="conTable" class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </tfoot>
</table>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#conTable').DataTable({
                "ajax": {
                    "url": "../Convention/GetConList",
                    "dataSrc": ""
                },
                "columns": [
                {
                    "data": "ID",
                    "visible": false,
                    "searchable": false
                },
                { "data": "Name" },
                { "data": "Address" },
                { "data": "State" },
                { "data": "ZipCode" },
                { "data": "Description" },
                { "data": "StartDate" },
                { "data": "EndDate" }]
            });

            $('#conTable tbody').on('click', 'tr', function () {
                var rowId = table.row(this).data().ID;
                var url = '@Url.Action("Edit", "Convention", new { id = "__id__" })';
                window.location.href = url.replace('__id__', rowId);
            });
        });
    </script>
}