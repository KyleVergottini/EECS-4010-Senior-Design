@{
    ViewBag.Title = "Select an Event to Edit";
}
<h2>@ViewBag.Title</h2>
<table id="eventTable" class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </tfoot>
</table>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#eventTable').DataTable({
                "ajax": {
                    "url": "../Convention/GetEventList",
                    "dataSrc": ""
                },
                "columns": [
                {
                    "data": "ID",
                    "visible": false,
                    "searchable": false
                },
                { "data": "Name" },
                { "data": "Description" },
                { "data": "StartDate" },
                { "data": "EndDate" }]
            });

            $('#eventTable tbody').on('click', 'tr', function () {
                var rowId = table.row(this).data().ID;
                var url = '@Url.Action("EditEvent", "Convention", new { id = "__id__" })';
                window.location.href = url.replace('__id__', rowId);
            });
        });
    </script>
}